{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "./app/components/*"
      ],
      "@/*": [
        "./app/*"
      ],
      "@/lib/*": ["./lib/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
