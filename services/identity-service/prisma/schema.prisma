// schema.prisma

generator client {
  provider = "prisma-client-js"
  output = "../src/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String            @id @default(uuid())
  name            String?
  email           String?           @unique
  phoneNumber     String?           @unique
  password  String?           @unique
  avatarUrl       String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  accounts        Account[]
  preferences     UserPreference[]
  friends         UserFriend[]      @relation("UserToFriends")
  friendOf        UserFriend[]      @relation("FriendToUsers")
}

model Account {
  id                String   @id @default(uuid())
  userId            String
  provider          String   // e.g., "google", "line", "credentials"
  providerAccountId String   // ID from OAuth provider
  email             String?  // optional, may not exist (e.g. LINE)
  accessToken       String?  // optional
  refreshToken      String?  // optional

  user              User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model PreferenceCategory {
  id        String            @id @default(uuid())
  key       String            @unique   // e.g., "karaoke", "travel"
  label     String
  icon      String?

  preferences UserPreference[]
}

model UserPreference {
  id          String             @id @default(uuid())
  userId      String
  categoryId  String
  score       Int                @default(5)

  user        User               @relation(fields: [userId], references: [id])
  category    PreferenceCategory @relation(fields: [categoryId], references: [id])

  @@unique([userId, categoryId])
}

model UserFriend {
  id         String  @id @default(uuid())
  userId     String
  friendId   String

  user       User    @relation("UserToFriends", fields: [userId], references: [id])
  friend     User    @relation("FriendToUsers", fields: [friendId], references: [id])

  @@unique([userId, friendId])
}


