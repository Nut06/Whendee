generator client {
  provider      = "prisma-client-js"
  output        = "../src/prisma/client"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String           @id @default(uuid())
  name              String?
  email             String?          @unique
  phoneNumber       String?          @unique
  avatarUrl         String?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  password          String?          @unique
  accessToken       String?
  accessTokenExpiry DateTime?
  refreshTokens     RefreshToken[]
  friendOf          UserFriend[]     @relation("FriendToUsers")
  friends           UserFriend[]     @relation("UserToFriends")
  preferences       UserPreference[]
  notifications     Notification[]
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model PreferenceCategory {
  id          String           @id @default(uuid())
  key         String           @unique
  label       String
  icon        String?
  preferences UserPreference[]
}

model UserPreference {
  id         String             @id @default(uuid())
  userId     String
  categoryId String
  score      Int                @default(5)
  category   PreferenceCategory @relation(fields: [categoryId], references: [id])
  user       User               @relation(fields: [userId], references: [id])

  @@unique([userId, categoryId])
}

model UserFriend {
  id       String @id @default(uuid())
  userId   String
  friendId String
  friend   User   @relation("FriendToUsers", fields: [friendId], references: [id])
  user     User   @relation("UserToFriends", fields: [userId], references: [id])

  @@unique([userId, friendId])
}

model Notification {
  id         String             @id @default(uuid())
  userId     String
  type       NotificationType
  title      String
  message    String?
  eventId    String?
  inviterId  String?
  payload    Json?
  status     NotificationStatus @default(PENDING)
  readAt     DateTime?
  resolvedAt DateTime?
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId, status])
}

enum NotificationType {
  EVENT_INVITE
}

enum NotificationStatus {
  PENDING
  READ
  ACCEPTED
  DECLINED
}
