PORT=3002
DATABASE_URL=postgresql://dev:dev@localhost:5432/appdb?schema=identity
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Must match the public HTTPS domain of identity-service
# e.g. https://<your-tunnel-domain>/auth/google/callback
GOOGLE_CALLBACK_URL=

# Optional: control which app schemes are allowed for redirect back to app
GOOGLE_OAUTH_ALLOWED_SCHEMES=frontend,exp,http,https
# Optional: fallback target when no redirectUri is provided
# For Expo Go deep link use your scheme: e.g. frontend://auth/callback or exp://.../auth/callback
GOOGLE_OAUTH_FALLBACK=http://localhost:3000
